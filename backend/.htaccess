# Simple routing for API
RewriteEngine On

# Route API and docs requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(api|docs)(/.*)?$ index.php [QSA,L]

# Deny access to sensitive files
<FilesMatch "\.(env|log|ini|conf)$">
    Require all denied
</FilesMatch>